<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pastebook</title>
    <link rel="icon" type="image/png" href="~/Content/images/pastebook-icon.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="main-body">
                    @if (Session["user"] != null)
                    {
                        @Html.Partial("NavigationBar")
                    }
                    @RenderBody()
                </div>
            </div>
            <div class="row">
                @Html.Partial("Footer")
            </div>
            </div>
        </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/datetime")
            @RenderSection("scripts", required: false)
</body>
</html>
@{
    <script>
        var SeeNotifUrl = "@Url.Action("SeeNotification", "Notification")";
    </script>
    <script src="~/Scripts/notification-see.js"></script>
}
