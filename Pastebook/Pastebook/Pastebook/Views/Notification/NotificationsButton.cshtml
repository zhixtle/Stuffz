@model IEnumerable<Pastebook.Models.NotificationModel>

@{
    var notifsCount = Model.Count();
}

<div class="block-keep-ratio  block-keep-ratio-1-1  block-width-half  pull-right  notifications" data-toggle="popover" data-placement="right" title="Notifications" data-content="@Html.Action("Notifications", "Notification")">
    <a id="notifsBlock" class="main-menu-link block-keep-ratio-content text-center">
        @if(notifsCount == 0)
        {
            <span class="notif-badge"> </span>
        }
        else
        {
            <span class="badge notif-badge"> @notifsCount </span>
        }
        <span class="main-menu-link-text">
             Notifications
        </span>
    </a>
</div>