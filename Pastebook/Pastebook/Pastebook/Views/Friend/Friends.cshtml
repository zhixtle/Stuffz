@model IEnumerable<Pastebook.Models.FriendModel>

<div class="content-main">
    <div class="row margin-b-30">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="content-item">
                <div id="friendsList">
                    <div class="friends-head">
                        <h2>Friends</h2>
                    </div>
                    <div class="friends-body">
                        @foreach (var item in Model)
                        {
                            string imgSrc = null;
                            if (item.ProfilePicture != null)
                            {
                                var base64 = Convert.ToBase64String(item.ProfilePicture);
                                imgSrc = String.Format("data:image/png;base64,{0}", base64);
                            }
                            else
                            {
                                imgSrc = Href("~/Content/images/default-user.png");
                            }
                            <div class="friends-item">
                                <img src="@imgSrc" height="50" width="50" />
                                <a href="@Url.Action("ViewProfile", "UserProfile", new { profileUsername = item.Username })">
                                    @Html.DisplayFor(friend => item.FirstName) @Html.DisplayFor(friend => item.LastName)
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<img src="@Url.Content("~/Content/images/users-1-colored.png")" class="icon-current-page" width="100" height="100" />

