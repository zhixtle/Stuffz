@model IEnumerable<Pastebook.Models.PostModel>

<div id="userPosts">
        @foreach (var item in Model)
        {
            var viewPostID = Html.DisplayFor(post => item.PostID);
            <div class="content-main">
                <div class="row margin-b-30">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="content-item">
                            <div class="heading">
                                @if (item.PosterID == item.ProfileOwnerID)
                                {
                                    <h1>@Html.DisplayFor(post => item.PosterName)</h1>
                                }
                                else
                                {
                                    <h1>@Html.DisplayFor(post => item.PosterName) > @Html.DisplayFor(post => item.ProfileOwnerName)</h1>
                                }
                                <p class="text-uppercase">@Html.DisplayFor(post => item.DateCreated)</p>
                            </div>
                            <div class="desc">
                                <p>@Html.DisplayFor(post => item.Content)</p>
                            </div>


                            @{
                                string tooltipText = item.LikesCount + " Likes";
                                string toolTipContent = Html.Action("Likes", "Post", new { postID = viewPostID }).ToString();
                            }

                            <div>
                                <button type="button" data-toggle="tooltip" data-placement="right" title="@toolTipContent">
                                    @tooltipText
                                </button>
                            </div>

                            @if (item.IsLiked == true)
                            {
                                <button type="button" class="btnLike" id="@viewPostID" disabled>Like</button>
                            }
                            else
                            {
                                <button type="button" class="btnLike" id="@viewPostID">Like</button>
                            }

                            @Html.Action("PostComments", "Post", new { postID = viewPostID })

                            <div class="row comment-add">
                                <div class="col-md-10 comment-add-content-area">
                                    <input type="text" class="comment-add-content" placeholder="Write a comment..." />
                                </div>
                                <div class="col-md-2">
                                    <button type="button" id="@viewPostID" class="btnComment btn comment-button">Comment</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                }
</div>

